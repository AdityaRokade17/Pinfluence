<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-center bg-cover bg-zinc-300 
            flex items-center justify-center">
  <div class="w-[28vw] h-[70vh] bg-white px-5 py-10 rounded-[30px]">
    <h1 class="text-3xl font-semibold text-zinc-800 text-center leading-none tracking-tighter p-3 mb-7">Create Your Account</h1>
    <form action="/register" method="post">
      <input class="border rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
      <input class="border rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class="border rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="phone no">
      <input class="border rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <input class="border rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Create New Account">

      <a class="p-1 font-semibold text-zinc-700" href="#">Forget Password ?</a>
      
      <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto">By continuing, you agree to Pinterest's 
        Terms of Service; and acknowledge you've read our 
        Privacy Policy; Notice at collection; 
      </p>
    </form>
    <a href="/" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Already have an account ?</a>
  </div>
</div>

<% include ./partials/footer.ejs %>