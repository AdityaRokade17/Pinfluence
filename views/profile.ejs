<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">

    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>

    <div class="profdets flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadicon" class=" cursor-pointer w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="text-zinc-800 ri-pencil-line"></i> 
            </span>
            <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
                <img src="/images/uploads/<%= user.profileImage %>"
                class="h-full w-full object-cover">
            </div>
        </div>
        
        <h1 class="text-2xl mt-2"><%= user.name %></h1>
        <h3><%= user.username %></h3>
        <a href="/edit" class="px-7 py-2 mt-5 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a> 
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Add New Post</a>
    </div>

    <div class="cards flex flex-wrap gap-10 mt-10 px-10">
        <div class="">
            <div class="w-52 h-40 bg-zinc-300 rounded-lg px-10 rounded-lg overflow-hidden">
                <img src="/images/uploads/<%= user?.posts[0]?.image %>"
                class="w-full h-full object-cover"
                >
            </div>
            <a href="/show/posts" class="inline-block text-xl font-semibold mt-5">Your Uploaded Pins</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5> 
        </div>
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click" , function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change" , function(){
        document.querySelector("#uploadform").submit();
    })
</script>


<% include ./partials/footer.ejs %>